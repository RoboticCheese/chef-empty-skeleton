---
<% if @driver %>
driver:
  name: <%= @driver %>
<% end %>
<% if @provisioner %>

provisioner:
  name: <%= @provisioner %>
<% end %>
<% if @platforms %>

platforms:
  <% @platforms.each do |p| %>
  - name: <%= p %>
  <% end %>
<% end %>
<% if @suites %>

suites:
  <% @suites.each do |s| %>
  - name: <%= s %>
    run_list:
      - recipe[<%= s == 'default' ? cookbook_name : "#{cookbook_name}::#{s}" %>]
    attributes:
  <% end %>
<% end %>
